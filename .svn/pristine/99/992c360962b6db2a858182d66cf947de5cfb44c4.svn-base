.news{
    background: #fff;
    height: 100%;
    overflow: auto;
    .news-header{
        width: 100%;
        height: 1.1rem;
        line-height: 1.2rem;
        text-align: center;
        @include page_header_color(#c12f3e);
        h3{
            @include page_header_text_color($theme-red-header-text-color);
            display: inline-block;
            margin-left: -.6rem;
        }
        .img-he{
            margin-left: .3rem;
            float: left;
            margin-top: .4rem;
        }
        .img-he:active{
            transform: scale(.95);
        }
    }
    &-ul{
        width: 100%;
        height: calc(100% - 1rem);
        background: #f2f2f2;
        list-style: none;
        -webkit-overflow-scrolling: touch;
        margin-top: 1.1rem;
        padding-top: 0.2rem;
        padding-left: 0;
        overflow: auto;
        position: relative;
        z-index: 1;
        
        &-item{
            width: calc(100% - .32rem);
            margin: 0 auto;
            padding-top: .1rem;
            height: 2rem;
            border-bottom: 1px solid #d7d7d7;
            // line-height: .99rem;
            font-size: .24rem;
            color: #555555;
            
        }
    }
}