<script>
import Vue from "vue";
import { Toast } from "vant";

Vue.use(Toast);
import { apiGetContactUsInfo } from "@/api/Appsetting.js";
import { apiGetMemberMatchAndUserRank } from "@/api/match.js";
import back from "@/components/Botton/back.vue";
export default {
  name: "history",
  components: {
    back
  },
  filters: {
    state(val) {
      if ((val = "已结算")) {
        return 1;
      } else {
        return 2;
      }
    }
  },
  data() {
    return {
      list: [this.$t('Ordinary'), this.$t('Rank'), this.$t('Challenge')],
      num: 0,
      imgSrc: "",
      showImg: false,
      nomsg: true,
      noMore: false,
      noMore1: false,
      noMore2: false,
      // load: false,
      usualList: [], //普通赛列表1
      rankList: [], //排位赛列表2
      challageList: [], //挑战赛列表3
      letfTeam: "",
      battle: "",
      rightTeam: "",
      isLoading: false, //下拉
      loading: false, //上拉
      finished: false, //是否已加载完所有数据
      indexNum: 1,
      show: true,
      states: true,
      states2: false,
      IndexNum: 1,
      busy: false,
      typeNum: 1,
      typeNum2: 1,
      lang: "",
      totalPages: "",
      immediate: false,
      noData: false,
    };
  },
  methods: {
    goBack() {
      this.$router.go(-1);
    },
    getHistoryList() {
      let data = {
        index: this.IndexNum,
        count: 10,
        type: this.typeNum //普通赛
      };
      this.loading = true;
      apiGetMemberMatchAndUserRank(data, true).then(res => {
        if(Math.abs(res.Code) >= 600 || res.Data.length <= 0) {
          this.loading = true;
          this.noData = true;
        } else {
          this.busy = false;
          this.totalPages = res.TotalPages;
          if (this.typeNum == 1) {
            this.usualList = res.Data;
          }
          if (this.typeNum == 2) {
            this.rankList = res.Data;
          }
          if (this.typeNum == 3) {
            this.challageList = res.Data;
          }
          this.loading = false;
          this.noData = false;
        }
      })
    },
    getNum(index) {
      this.num = index;
      if (this.num == 0) {
        this.typeNum = 1;
        this.IndexNum = 1;
        this.usualList = [];
        this.getHistoryList();
      }
      if (index == 1) {
        this.typeNum = 2;
        this.IndexNum = 1;
        this.rankList.splice(0);
        this.getHistoryList()
      }
      if (index == 2) {
        this.typeNum = 3;
        this.IndexNum = 1;
        this.challageList.splice(0);
        this.getHistoryList()
      }
    },
    load() {
      if (this.IndexNum >= this.totalPages) {
        this.loading = false;
        this.busy = true;
        return
      }
      this.IndexNum++;
      this.busy = true;
      let data = {
        index: this.IndexNum,
        count: 10,
        type: this.typeNum
      };

      if (data.type == 1) {
        this.loading = true;
        this.noData = false;
        apiGetMemberMatchAndUserRank(data, true).then(res => {
          for (let i = 0; i < res.Data.length; i++) {
            if (res.Data.length !== 0) {
              this.usualList.push(res.Data[i]);
            }
          }
          this.busy = false;
          this.loading = false;
        });
      } else if (data.type == 2) {
        this.loading = true;
        apiGetMemberMatchAndUserRank(data, true).then(res => {
          for (let i = 0; i < res.Data.length; i++) {
            if (res.Data.length !== 0) {
              this.rankList.push(res.Data[i]);
            }
          }
          this.busy = false;
          this.loading = false;
        });
      } else if (data.type == 3) {
        this.loading = true;
        apiGetMemberMatchAndUserRank(data, true).then(res => {
          for (let i = 0; i < res.Data.length; i++) {
            if (res.Data.length !== 0) {
              this.challageList.push(res.Data[i]);
            }
          }
          this.busy = false;
          this.loading = false;
        });
      }
    },
  },
  created() {
    this.lang = JSON.parse(localStorage.getItem("lang")).tag;
    this.getHistoryList();
  }
};
</script>

