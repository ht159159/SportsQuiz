.address{
    width: 100%;
    height: 100%;
    background: #f2f2f2;
    &-header{
        width: 100%;
        height: 1.1rem;
        line-height: 1.2rem;
        text-align: center;
        @include page_header_color($theme-red);
        position: relative;
        h3{
            @include page_header_text_color($theme-red-header-text-color);
            display: inline-block;
        }
        .img-he{
            margin-left: .3rem;
            float: left;
            margin-top: .4rem;
            width: .42rem;
            height: .42rem;
        }
        .img-he:active{
            transform: scale(.95);
        }
        .addAdddress {
            font-size: .23rem;
            @include page_header_text_color($theme-red-header-text-color);
            position:absolute;
            top:.5rem;right:.32rem;
            display: inline-block;
        }
    }
    &-couent{
        &-ul{
            width: 100%;
            // padding-top: .29rem;
            &-item{
                width: calc(100% - .3rem);
                margin: 0 auto;
                position: relative;
                // margin-bottom: .64rem;
                padding-top: .1rem;
                height: 1.4rem;
                border-bottom: 1px solid #d7d7d7;
                &-top{
                    .name{
                        line-height: .47rem;
                        font-size: .26rem;
                        color: #1f1f1f;
                    }
                    .phone{
                        line-height: .47rem;
                        font-size: .25rem;
                        color: #828282;
                        margin-left: .25rem;
                    }
                }
                &-bottom{
                    .mo{
                        width: .62rem;
                        height: .27rem;
                        border-radius: .1rem;
                        background: #f0b9bf;
                        color: #fff;
                        text-align: center;
                        font-size: .2rem;
                        float: left;
                    }
                    .dizhi{
                        font-size: .26rem;
                        color: #1f1f1f;
                        line-height: .26rem;
                        margin-left: .25rem;
                        float: left;
                        width: 4.4rem;
                        overflow-wrap: break-word;
                    }
                    .bian{
                        float: left;
                        margin-left: .86rem;
                        font-size: .25rem;
                        color: #c3c3c3;
                        text-align: center;
                        border-left: 1px solid #c3c3c3;
                        line-height: .7rem;
                        width: .9rem;
                        margin-top: -.2rem;
                    }
                }
            }
        }
        .noMsg{
            width: 100%;
            img{
                display: block;
                width: 3.86rem;
                height: 3rem;
                margin: 0 auto;
                margin-top: 3.4rem;
            }
            p{
                width: calc(100% - .2rem);
                margin: 0 auto;
                height: .8rem;
                text-align: center;
                line-height: .8rem;
                border-radius: .4rem;
                box-shadow: 1px 3px 6px #e8cccf;
                font-size: .32rem;
                margin-top: 3.12rem;
                @include myself_btn();
            }
        }
    }
}