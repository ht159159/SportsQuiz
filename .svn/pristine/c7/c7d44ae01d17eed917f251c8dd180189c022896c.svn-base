// 手機版樣式
.privacy-Mobile {
    width: 100%;
    padding: 0.3rem;
    background: #EAEAEA;
    .title {
        font-size: 0.24rem;
        text-align: center;
        padding: 0.1rem 0;
    }

    p {
        font-size: 0.24rem;
        padding: 0.1rem 0;
        text-align: justify;
        text-indent: 2em;
        line-height: 0.4rem;
        letter-spacing: 0.05rem
    }

    .paragraph {
        margin: 0;
        padding: 0.3rem 0 0.3rem 0;
        font-size: 0.32rem;
        line-height: 0.32rem;
    }
}

// 電腦版樣式
.privacy-PC {
    width: 100%;
    padding: 15px;
    background: #EAEAEA;
    .title {
        font-size: 16px;
        text-align: center;
        padding: 10px 0;
    }

    p {
        margin: 0;
        padding: 5px 0px;
        font-size: 14px;
        line-height: 20px;
        text-align: justify;
        text-indent: 2em;
    }

    .paragraph {
        margin: 0;
        padding: 15px 0 5px 0;
        font-size: 16px;
    }
}