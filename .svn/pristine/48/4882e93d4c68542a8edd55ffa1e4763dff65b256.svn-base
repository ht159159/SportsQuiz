.login {
  width: 100%;
  height: 100%;
  background: url('~@/assets/bg.png');
  background-size: cover;
  background-repeat: no-repeat;
  text-align: center;
  padding-top: 2.5rem;
  .back-icon {
    width: 0.25rem /* 42/100 */;
    height: 0.43rem /* 42/100 */;
    display: inline-block;
    background-image: url('~@/assets/back.png');
    background-size: 100%;
    margin-left: 0.31rem /* 31/100 */;
    margin-top: 0.5rem;
    position: absolute;
    left: 0;
    top: 0;
  }
  &-btn {
    margin-top: 0.73rem;
  }
  &-actions {
    margin-top: 0.5rem;
    width: 100%;
    text-align: center;
    &_action {
      font-size: 0.24rem;
    }
  }
  .logo {
    width: 1.8rem;
    height: 2.1rem;
    background: url('~@/assets/icons/logo.png') no-repeat center;
    background-size: 100% 100%;
    margin: 0.45rem auto ;
  }
}
.login-action_action {
  color: #ffffff;
  position: relative;
  z-index: 9999;
}
.lang-select {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-top: 0.73rem;
  p {
    color: #fff;
  }
  .lang-select-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 0.25rem;
    .cn {
      width: 0.45rem;
      height: 0.45rem;
      background: url('~@/assets/icons/zh-CN.png') no-repeat center;
      background-size: contain;
      margin-right: 0.5rem;
    }
    .en {
      width: 0.45rem;
      height: 0.45rem;
      background: url('~@/assets/icons/en-US.png') no-repeat center;
      background-size: contain;
    }
  }
}