.Cmatch {
  overflow: auto !important;
  -webkit-overflow-scrolling: touch;
  &-head {
    z-index: 10;
    position: fixed;
    top: 0;
    width: 100%;
    height: 1.24rem /* 124/100 */;
    @include page_header_color($theme-red);
    // text-align: center;
    line-height: 1.24rem;
    color: #f2f2f2;
    font-size: 0.33rem; /* 33/100 */
    .title {
      box-sizing: border-box;
      margin: 0 auto;
      @include page_header_text_color($theme-red-header-text-color);
      font-size: 0.33rem; /* 33/100 */
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
    }
  }
  &-main {
    margin-top: 1.24rem;
    position: relative;
    height: 5.58rem /* 685/100 */;
    background: url('~@/assets/challenge/main-bgc.png');
    background-repeat: no-repeat;
    background-size: 100%;
    position: relative;
    z-index: 1;
    &-home {
      position: absolute;
      font-size: 0.38rem /* 38/100 */;
      color: #ffffff;

      left: 26%;
      transform: translateX(-50%);
      top: 46%;
    }
    &-away {
      position: absolute;
      font-size: 0.38rem;
      color: #ffffff;
      right: 9%;
      transform: translateX(-50%);
      top: 46%;
    }
    &-layer {
      background: url('~@/assets/challenge/challenge_ss_02.png');
      background-size: 100%;
      width: 7.5rem /* 750/100 */;
      height: 1.88rem;
      position: absolute;
      bottom: -0.6rem;
      &-num {
        font-size: 0.49rem /* 49/100 */;
        color: #ffc200;
        text-align: center;
        margin-top: 0.7rem;
      }
      &-left {
        width: 2.41rem /* 141/100 */;
        height: 1.09rem /* 109/100 */;

        position: absolute;
        left: 0%;
        top: 50%;
        transform: translateY(-50%);
        p {
          text-align: center;
          font-size: 0.28rem /* 28/100 */;
          line-height: 0.37rem /* 37/100 */;
          span {
            font-size: 0.28rem /* 28/100 */;
            line-height: 0.37rem /* 37/100 */;
          }
        }
        &-one {
          color: #ffffff;
        }
        &-two {
          color: #ffffff;
        }
        &-three {
          color: #ff9e04;
        }
      }
      &-right {
        width: 2.41rem /* 141/100 */;
        height: 1.09rem /* 109/100 */;

        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        p {
          text-align: center;
          font-size: 0.28rem /* 28/100 */;
          line-height: 0.37rem /* 37/100 */;
          span {
            font-size: 0.28rem /* 28/100 */;
            line-height: 0.37rem /* 37/100 */;
          }
        }
      }
    }
  }
  &-bottom {
    margin-top: -0.09rem;

    // height: 5.76rem /* 343/100 */;
    background-color: #0d1710;
    background-size: 100%;

    &-bet {
      position: relative;
      margin: 0 auto;

      width: 7.1rem /* 710/100 */;
      height: 4.62rem;
      padding-top: 2.1rem /* 30/100 */;
      background: url('~@/assets/challenge/2.png');
      background-size: 100%;
      &-home {
        width: 40%;
        position: absolute;
        left: 19%;
        transform: translateX(-50%);
        top: 22%;
        font-size: 0.3rem /* 30/100 */;
        font-weight: 600;
        color: #ffffff;
        display: flex;
        flex-direction: column;
        align-items: center;
        &-img {
          width: 0.5rem;
          height: 0.5rem;
          margin-bottom: 0.1rem;
        }
      }
      &-away {
        position: absolute;
        color: #ffffff;
        right: 23%;
        transform: translateX(50%);
        top: 22%;
        font-size: 0.3rem /* 30/100 */;
        font-weight: 600;
        display: flex;
        flex-direction: column;
        align-items: center;
        &-img {
          width: 0.5rem;
          height: 0.5rem;
          margin-bottom: 0.1rem;
        }
      }
      &-title {
        width: 100%;
        margin: 0 auto;
        margin-bottom: 0.17rem /* 17/100 */;

        height: 0.21rem /* 21/100 */;
        font-size: 0.23rem /* 23/100 */;
        color: #1484e6;
        font-weight: 600;
        background-size: 100%;
        position: absolute;
        left: 50%;
        top: 19%;
        transform: translateX(-50%);
        text-align: center;
      }
      &-main {
        margin: 0 auto;
        width: 6.54rem /* 654/100 */;
        height: 2.13rem /* 213/100 */;
        background: url('~@/assets/challenge/1_03.png');
        background-size: 100%;
        padding: 0.42rem /* 42/100 */ 0.25rem /* 25/100 */;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;

        &-win {
          float: left;
          width: 1.95rem /* 195/100 */;
          height: 1.3rem /* 130/100 */;
          background: url('~@/assets/challenge/bule.png');
          background-size: 100%;
          font-size: 0.38rem /* 38/100 */;
          color: #003658;
          text-align: center;
          line-height: 1.3rem;
          transition: 0.3s;
          margin: 0 0.03rem /* 10/100 */;
        }
        &-win:active {
          transform: scale(0.95);
        }
        &-flat {
          float: left;
          width: 1.95rem /* 195/100 */;
          height: 1.3rem /* 130/100 */;
          margin-left: 0.07rem /* 7/100 */;
          background: url('~@/assets/challenge/bule.png');
          background-size: 100%;
          font-size: 0.38rem /* 38/100 */;
          color: #003658;
          text-align: center;
          line-height: 1.3rem;
          transition: 0.3s;
        }
        &-flat:active {
          transform: scale(0.95);
        }
        &-lose {
          float: left;
          width: 1.95rem /* 195/100 */;
          height: 1.3rem /* 130/100 */;
          margin-left: 0.07rem /* 7/100 */;
          background: url('~@/assets/challenge/bule.png');
          background-size: 100%;
          font-size: 0.38rem /* 38/100 */;
          color: #003658;
          text-align: center;
          line-height: 1.3rem;
          transition: 0.3s;
        }
        &-lose:active {
          transform: scale(0.95);
        }
        .active {
          background: url('~@/assets/challenge/yellow.png');
          background-size: 100%;
          color: #e1f8fe;
        }
      }
    }
    &-button {
      margin: 0 auto;
      width: 7.1rem /* 710/100 */;
      height: 1.9rem /* 163/100 */;
      background-color: #003257;
      border-top: 0.02rem /* 2/100 */ solid #005898;
      &-main {
        margin: 0 auto;
        width: 6.51rem /* 651/100 */;
        height: 1.17rem /* 117/100 */;
        background-color: #222423;
        border-radius: 0.08rem /* 6/100 */;
        padding-top: 0.24rem;
        margin-top: 0.39rem /* 19/100 */;
        &-button {
          margin: 0 auto;

          width: 5.49rem /* 549/100 */;
          height: 0.72rem /* 73/100 */;
          background: url('~@/assets/challenge/btn_05.png');
          background-size: 100%;
          transition: 0.3s;
          font-size: 0.25rem /* 25/100 */;
          color: #4a2402;
          text-align: center;
          line-height: 0.65rem;
        }
        &-button:active {
          transform: scale(0.95);
        }
      }
    }
  }
  .Cmatch-team-name {
    width: 100%;
    text-align: center;
  }
}
