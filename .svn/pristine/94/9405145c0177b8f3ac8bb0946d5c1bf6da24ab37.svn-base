.recommended .content::-webkit-scrollbar {
    display: none;
}
.clubDividendWithdrawal {
    width: 100%;
    height: 100%;
    background: #f2f2f2;
    position: relative;
    &-header {
        width: 100%;
        height: 1.1rem;
        line-height: 1.2rem;
        text-align: center;
        @include page_header_color($theme-red);
        z-index: 1;

        h3 {
            @include page_header_text_color($theme-red-header-text-color);
            display: inline-block;
            margin-left: -0.5rem;
        }
        .img-he {
            margin-left: 0.3rem;
            float: left;
            margin-top: 0.4rem;
            width: 0.42rem;
            height: 0.42rem;
        }
        .img-he:active {
            transform: scale(0.95);
        }
    }
    &-main{
        width: 100%;
        padding: 0.3rem 0.2rem;
        margin-top: 1.1rem;
        height: calc(100% - 1.1rem);
        overflow-y: scroll;
        .dividendList{
            width: 100%;
            border-radius: 0.1rem;
            background-color: #fff;
            padding: 0 0.3rem;
            box-sizing: border-box;
            overflow-y: scroll;
            
            img{
                width: 0.7rem;
            }
    
            &-box{
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-bottom: 1px dashed #d0d0d0;
    
                &-icon{
                    width: 0.56rem;
                    height: 0.56rem;
                    background-image: url('~@/assets/myself/lingdang_03.png');
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                }
    
                &-content{
                    display: flex;
                    width: 88%;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 0.4rem 0;
                    // border-bottom: 1px dashed #d0d0d0;
    
                    .content-box{
                        width: 75%;
                        div{
                            line-height: initial;
                        }
    
                        &-title{
                            font-size: 0.36rem;
                            // font-weight: bold;
                            // font-family: "Microsoft Ya Hei";
                        }
                        &-statement{
                            font-size: 0.28rem;
                            color: #898989;
                        }
                    }
    
                    .dividendList-btn{
                        color: #fff;
                        border-radius: 0.5rem;
                        background-color: #35bb0f;
                        // border: 1px solid #fe654c;
                        font-size: 0.32rem;
                        line-height: 0.32rem;;
                        padding: 0.06rem 0.3rem;
                    }
                }
            }
            &-box:last-child{
                border-bottom: none;
            }

            .noMissionBg {
                text-align: center;
                position: relative;
                p {
                position: absolute;
                bottom: 0.2rem;
                left: 50%;
                transform: translateX(-50%);
                color: #8b8b8b;
                }
            }
            .noMission{
                width: 65%;
                margin: 1rem;
            }
        }
    }
}